<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsActivity" >

    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignRight="@+id/konten"
        android:layout_marginTop="125dp"
        android:background="@drawable/ic_cross"
        android:elevation="6dp" />

    <LinearLayout
        android:id="@+id/konten"
        android:background="@drawable/bgkonten"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:elevation="4dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@drawable/back" />

        <TextView
            android:id="@+id/tv_title_content"
            android:layout_marginTop="12dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="JUDUL TEMPAT"
            />

        <TextView
            android:id="@+id/tv_body_content"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:layout_marginBottom="15dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ini merupakan Body dari pada Bank sampah tersebut"
            />

        <Button
            android:id="@+id/btn_detail"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="DETAIL"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/button"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/overbox"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:elevation="3dp"
        android:background="@drawable/overbox"
        />

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:id="@+id/map"
        />
    

</RelativeLayout>

